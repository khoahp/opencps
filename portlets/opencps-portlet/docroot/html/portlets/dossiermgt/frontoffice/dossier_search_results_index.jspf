<%
DossierSearchTerms searchTerms = (DossierSearchTerms)searchContainer.getSearchTerms();

SearchContext searchContext = SearchContextFactory.getInstance(request);
searchContext.setAttribute("paginationType", "more");
searchContext.setStart(searchContainer.getStart());
searchContext.setEnd(searchContainer.getEnd()); 

BooleanQuery searchQuery = BooleanQueryFactoryUtil.create(searchContext);
for (Map.Entry<String, String> entry : keywordIndexs.entrySet()) {
	
	if(Validator.isNotNull(entry.getValue())) {
		String[] values = StringUtil.split(entry.getValue(), StringPool.POUND);
		
		BooleanQuery booleanQuery = BooleanQueryFactoryUtil.create(searchContext);
		
		for(String value : values) {
			TermQuery termQuery = TermQueryFactoryUtil.create(searchContext, entry.getKey(), value);
			
			booleanQuery.add(termQuery, BooleanClauseOccur.SHOULD);
		}
		
		searchQuery.add(booleanQuery, BooleanClauseOccur.MUST);
	}
}
	
if(Validator.isNotNull(searchTerms.getSubmitDateTimeFrom()) 
		|| Validator.isNotNull(searchTerms.getSubmitDateTimeTo())) {

	BooleanQuery booleanQuery = BooleanQueryFactoryUtil.create(searchContext);
	
	booleanQuery.addRangeTerm(DossierDisplayTerms.SUBMIT_DATETIME, GetterUtil.getLong(searchTerms.getIndexerSubmitDateTimeFrom()), GetterUtil.getLong(searchTerms.getIndexerSubmitDateTimeTo()));
	
	searchQuery.add(booleanQuery, BooleanClauseOccur.MUST);
}

System.out.println("dossier_search_results_index_query:::"+searchQuery);

Hits hits = SearchEngineUtil.search(searchContext, searchQuery);

