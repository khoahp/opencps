<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">
<service-builder package-path="org.opencps.integrate.dao" auto-namespace-tables="false">
	<author>khoavd</author>
	<namespace>integrate</namespace>

	<entity name="IntegrateAPI" local-service="true" table="opencps_apikey"
		remote-service="true">

		<column name="id" type="long" primary="true"></column>
		<column name="companyId" type="long"></column>
		<column name="groupId" type="long"></column>
		<column name="userId" type="long"></column>
		<column name="createDate" type="Date"></column>
		<column name="modifiedDate" type="Date"></column>
		<column name="lastLogin" type="Date"></column>
		<column name="apiKey" type="String"></column>
		<column name="agency" type="String"></column>

		<!-- Finder methods -->
		<finder name="apiKey" return-type="MobileAPI">
			<finder-column name="apiKey" />
		</finder>
		
		<finder name="userName" return-type="MobileAPI">
			<finder-column name="userId"/>
		</finder>
		<finder name="agency" return-type="MobileAPI">
			<finder-column name="agency"/>
		</finder>

		<!-- Reference -->
		<reference entity="User" package-path="com.liferay.portal" />
	</entity>
	
	<entity name="ForgotPass" local-service="true" table="opencps_verifycode"
		remote-service="false">

		<column name="id" type="long" primary="true"/>
		<column name="createDate" type="Date"/>
		<column name="verifyCode" type="String"/>
		<column name="verifyDate" type="Date"/>
		<column name="expiredDate" type="Date"/>
		<column name="userid" type="long"/>
		<column name="inused" type="boolean"/>
		
		<!-- Finder -->
		<finder return-type="ForgotPass" name="V_C">
			<finder-column name="verifyCode"/>
		</finder>
		
		<finder return-type="Collection" name="U_ID">
			<finder-column name="userid"/>
		</finder>
		
	</entity>
	
	
	
	<exceptions>
		<exception>DossierStatus</exception>
		<exception>NoMessageContent</exception>
		<exception>InvalidMessageContent</exception>
		<exception>InvalidOldPass</exception>
	</exceptions>
</service-builder>